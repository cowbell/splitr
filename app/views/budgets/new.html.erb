<div class="container">
  <h2>New Budget</h2>

  <%= form_for @budget, html: {class: "form-horizontal"} do |form| %>

    <fieldset>

      <div class="form-group <%= 'has-error' if @budget.errors[:name].present? %>">
        <%= form.label :name, class: "control-label col-lg-2" %>
        <div class="col-lg-10">
          <%= form.text_field :name, class: "form-control" %>
          <span class="help-block"><%= @budget.errors[:name].first %></span>
        </div>
      </div>

    </fieldset>

    <div class="form-group">
      <div class="col-lg-10 col-offset-2">
        <%= form.submit class: "btn btn-default" %>
        <%= link_to "Cancel", root_path, class: "btn btn-link" %>
      </div>
    </div>

  <% end %>
</div>

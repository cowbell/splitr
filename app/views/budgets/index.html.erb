<div class="container">
  <div class="panel">
    <div class="panel-heading">Your budgets</div>

    <table class="table table-hover table-condensed">
      <tr>
        <th>Name</th>
        <th class="text-center">Members</th>
        <th class="text-right">Total Amount</th>
        <th class="text-right"></th>
      </tr>
      <% @budgets.order(created_at: :desc).each do |budget| %>
        <tr>
          <td><%= budget.name %></td>
          <td class="text-center"><%= budget.members.count %></td>
          <td class="text-right"><%= number_to_currency(budget.total, unit: "Â¤") %></td>
          <td class="text-right"><%= link_to "Show", budget_path(budget), class: "btn btn-primary btn-small"%></td>
        </tr>
      <% end %>
      <% if can? :create, Budget %>
        <tr>
          <td colspan="4"><%= link_to "Add", new_budget_path, class: "btn btn-primary btn-small" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="container">
  <h2>Edit Transaction</h2>

  <%= form_for [@budget, @transaction], html: {class: "form-horizontal"} do |form| %>

    <%= render "form", form: form %>

    <div class="form-group">
      <div class="col-lg-10 col-offset-2">
        <%= form.submit class: "btn btn-default" %>
        <%= link_to "Cancel", budget_path(@budget), class: "btn btn-link" %>
      </div>
    </div>

  <% end %>
</div>

<div class="navbar navbar-fixed-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <%= link_to "Splitr", root_path, class: "navbar-brand" %>

    <div class="nav-collapse navbar-responsive-collapse collapse">
      <ul class="nav navbar-nav ">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
        <% if can? :create, User %>
          <li class="<%= 'active' if current_page?(new_user_path) %>"><%= link_to "Register", new_user_path %></li>
        <% end %>
        <% if can? :create, Session %>
          <li class="<%= 'active' if current_page?(new_session_path) %>"><%= link_to "Log in", new_session_path %></li>
        <% end %>
        <% if can? :read, Budget %>
          <li class="<%= 'active' if current_page?(budgets_path) %>"><%= link_to "Budgets", budgets_path %></li>
        <% end %>
        <% if can? :create, Budget %>
          <li class="<%= 'active' if current_page?(new_budget_path) %>"><%= link_to "Create Budget", new_budget_path %></li>
        <% end %>
        <% if can? :destroy, Session %>
          <li class="<%= 'active' if current_page?(session_path) %>"><%= link_to "Log out", session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
